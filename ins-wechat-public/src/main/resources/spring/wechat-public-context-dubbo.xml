<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
			   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
			   xsi:schemaLocation="
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
	http://code.alibabatech.com/schema/dubbo
	http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<!-- 提供方应用信息，用于计算依赖关系 -->
	<dubbo:application name="wechat-public" />
	<dubbo:consumer check="false" />

	<!-- 使用multicast广播注册中心暴露服务地址 -->
	<dubbo:registry address="${dubbo.registry.address}" file="${catalina.home}/dubbo-registry/dubbo-registry.properties"/>

	 <!--<dubbo:monitor protocol="${dubbo.monitor.protocol}" />-->

	<dubbo:reference id="wechatAuthServiceRPC" retries="0" timeout="3000" interface="cn.com.yikangbao.service.wechat.auth.WechatAuthService"/>
	<dubbo:reference id="wechatUserServiceRPC" timeout="3000" interface="cn.com.yikangbao.service.wechat.user.WechatUserService"/>
	<dubbo:reference id="wechatMessageServiceRPC" timeout="3000" interface="cn.com.yikangbao.service.wechat.message.WechatMessageService"/>
</beans>