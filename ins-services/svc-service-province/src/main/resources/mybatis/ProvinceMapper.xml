<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.com.yikangbao.dao.province.ProvinceDAO">

	<insert id="create" parameterType="ProvinceM">
		INSERT INTO
			ykb_province (id, created_by, created_date, updated_date, updated_by, name)
	  	VALUES
	  		(#{id}, #{createdBy}, #{createdDate}, #{updatedDate}, #{updatedBy}, #{name})
	</insert>

	<update id="update" parameterType="ProvinceM">
		UPDATE ykb_province
		<set>
			<if test="updatedDate != null">
				updated_date = #{updatedDate},
			</if>
			<if test="updatedBy != null">
				updated_by = #{updatedBy},
			</if>
			<if test="name != null">
				name = #{name},
			</if>
		</set>
		WHERE id = #{id}
	</update>

	<update id="deleteById" parameterType="ProvinceM">
		DELETE FROM ykb_province WHERE id = #{id}
	</update>

	<sql id="sql_where">
		<where>
			<if test="id != null">
				AND p.id = #{id}
			</if>
			<if test="name != null">
				AND p.name like '%${name}%'
			</if>
		</where>
	</sql>

	<sql id="from_hospital">
		ykb_province p
	</sql>

	<select id="findByConditionPage" resultType="ProvinceM">
		SELECT
		p.*
		FROM
		<include refid="from_hospital" />
		<include refid="sql_where" />
	    ORDER BY h.created_date DESC
	</select>

	<select id="findOneByCondition" resultType="ProvinceM">
		SELECT
		p.*
		FROM
		<include refid="from_hospital" />
		<include refid="sql_where" />
		LIMIT 1
	</select>

	<select id="findByCondition" resultType="ProvinceM">
		SELECT
		p.*
		FROM
		<include refid="from_hospital" />
		<include refid="sql_where" />
		ORDER BY p.created_date DESC
	</select>
</mapper>

